<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Budget.Tips.ElecBillTips1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">


        <ImageView
            android:id="@+id/iv_elecbilltips1"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/efficientbulb" />


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="0"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="20dp">
                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Energy Efficient Light Bulbs"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Reduces the bill, lasts longer"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Victorian Government Initiative:"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textView2"

                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:autoLink="web"
                    android:text="https://www.esc.vic.gov.au/victorian-energy-upgrades/about-victorian-energy-upgrades-program"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>