<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Budget.Tips.OtherTips2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        android:paddingBottom="20dp">


        <ImageView
            android:id="@+id/iv_othertips2"
            android:layout_width="match_parent"
            android:layout_height="273dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/gym" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView2"
                    android:text="Dump the Gym Membership"

                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="If you’re going to the gym at least twice a week, then you’re probably getting your money’s worth"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Jogging around the neighborhood, riding a bike, or doing a workout video are alternatives to staying fit"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />
                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="Fitness apps have access to different fitness routines for free or very low cost"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/montserrat" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>