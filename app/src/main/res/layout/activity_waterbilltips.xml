<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Budget.Tips.WaterBillTipsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_waterbilltips1"


            android:text="Cold Water Storage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_waterbilltips2"


            android:text="Showers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_waterbilltips3"


            android:text="Running Water"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/btn_waterbilltips4"


            android:text="Washing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/colorPrimary"
            android:padding="20dp"
            android:textAllCaps="false"
            android:textColor="#FBFBFB"
            android:textSize="18sp"/>
    </LinearLayout>
</ScrollView>