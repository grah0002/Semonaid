<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Budgeting.WaterBillTipsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/editText_waterbilltips1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="Cold Water Storage"
            android:textAllCaps="true"
            android:textColor="#162265"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_waterbilltips1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/waterbilltnail"
            android:text="Cold Water Storage"
            android:textAllCaps="false"
            android:textColor="#0A1551"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_waterbilltips2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="Showers"
            android:textAllCaps="true"
            android:textColor="#162265"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_waterbilltips2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/waterbilltnail"
            android:text="Showers"
            android:textAllCaps="false"
            android:textColor="#0A1551"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_waterbilltips3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="Running Water"
            android:textAllCaps="true"
            android:textColor="#162265"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_waterbilltips3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/waterbilltnail"
            android:text="Running Water"
            android:textAllCaps="false"
            android:textColor="#0A1551"
            android:textSize="36sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_waterbilltips4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center_horizontal"
            android:inputType="textPersonName"
            android:text="Washing"
            android:textAllCaps="true"
            android:textColor="#162265"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_waterbilltips4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/waterbilltnail"
            android:text="Washing"
            android:textAllCaps="false"
            android:textColor="#0A1551"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>