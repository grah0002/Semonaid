<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Budgeting.BillsTipsMenuActivity">


    <Button
        android:id="@+id/btn_elecbilltips"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:background="@drawable/ovalbtn"
        android:gravity="center"
        android:text="Electricity Bill"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btn_waterbilltips"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="205dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:background="@drawable/ovalbtn"
        android:gravity="center"
        android:text="Water Bill"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btn_gasbilltips"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="205dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:background="@drawable/ovalbtn"
        android:gravity="center"
        android:text="Gas Bill"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btn_foodbilltips"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="216dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:background="@drawable/ovalbtn"
        android:gravity="center"
        android:text="Food / Grocery Bill"
        android:textColor="#FFF" />

    <Button
        android:id="@+id/btn_mobilebilltips"
        style="@android:style/Widget.Button.Toggle"
        android:layout_width="228dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_weight="0"
        android:background="@drawable/ovalbtn"
        android:gravity="center"
        android:text="Mobile Bill"
        android:textColor="#FFF" />

</LinearLayout>